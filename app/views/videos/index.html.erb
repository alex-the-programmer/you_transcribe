<div class="container">
    <div class="mt-3 mx-3">
        <%= render 'shared/search_form' %>
    </div>
    <%= render @videos %>
    <% unless @videos.present? %>
        <div class="alert alert-warning mt-3">
            <h4 class="alert-heading">Sorry, nothing was found!</h4>
            <p class="mb-0"> We constantly index YouTube videos but so far we didn't come across what you are looking for! </p>
        </div>
    <% end %>
    <div class="d-flex justify-content-center">
        <%= will_paginate @videos, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
</div>